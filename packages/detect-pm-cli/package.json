{
  "name": "@lerepo/detect-pm-cli",
  "version": "0.4.1",
  "publishConfig": {
    "access": "public",
    "directory": "package"
  },
  "description": "CLI to detect which package manager is being used.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lerepo/workspace-tools.git"
  },
  "main": "./lib/index.js",
  "bin": {
    "detect-pm": "./bin/detect-pm"
  },
  "engines": {
    "node": ">=12.18.3"
  },
  "scripts": {
    "_r:clean": "rimraf package && rimraf package.tgz",
    "_r:prepare": "yarn _r:clean && yarn build && yarn pack && jaguar -x package.tgz && rimraf package.tgz",
    "babel:build": "babel --root-mode upward src --out-dir lib --extensions '.ts' --env-name production",
    "babel:watch": "babel --root-mode upward src --out-dir lib --extensions '.ts' --watch",
    "build": "yarn clean && yarn babel:build",
    "clean": "rimraf dist build lib",
    "cli": "yarn node ./lib/cli.js",
    "format": "yarn g:format",
    "format:all": "yarn g:format:all",
    "format:list": "yarn g:format:list",
    "lint": "yarn g:lint",
    "lint:fix": "run-lint --fix",
    "lint:staged": "yarn g:lint:staged",
    "start": "yarn cli",
    "t:check": "tsc --noEmit -p tsconfig.json",
    "t:types": "yarn run t:check",
    "t:watch": "yarn run t:check --watch",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {
    "@lerepo/detect-pm": "workspace:*",
    "clipanion": "^3.1.0",
    "regenerator-runtime": "^0.13.9",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/cli": "7.18.10",
    "@babel/core": "^7.19.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.19.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.18.9",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.18",
    "babel-plugin-import": "^1.13.5",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-define": "^2.1.0",
    "core-js": "^3.25.2",
    "jaguar": "^6.0.1",
    "jest": "^29.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-package": "^1.3.0",
    "rimraf": "^3.0.2",
    "typescript": "4.8.3"
  }
}

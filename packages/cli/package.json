{
  "name": "@lerepo/cli",
  "version": "0.2.1",
  "publishConfig": {
    "access": "public",
    "directory": "package"
  },
  "description": "Command line interface for the mono-repo workspace collection of tools.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lerepo/workspace-tools.git"
  },
  "main": "./lib/index.js",
  "bin": {
    "lrt": "./bin/lrt"
  },
  "engines": {
    "node": ">=12.18.3",
    "yarn": ">=2"
  },
  "scripts": {
    "_r:prepare": "yarn clean && yarn build && yarn pack && jaguar -x package.tgz && rimraf package.tgz",
    "babel:build": "babel --root-mode upward src --out-dir lib --extensions '.ts' --env-name production",
    "babel:watch": "babel --root-mode upward src --out-dir lib --extensions '.ts' --watch",
    "build": "yarn babel:build",
    "clean": "rimraf dist build lib package package.tgz",
    "cli": "yarn node ./lib/cli.js web",
    "format": "yarn g:format",
    "format:all": "yarn g:format:all",
    "format:list": "yarn g:format:list",
    "lint": "yarn g:lint",
    "lint:fix": "run-lint --fix",
    "lint:staged": "yarn g:lint:staged",
    "open": "open-cli http://localhost:3000 -- firefox -devtools",
    "start": "concurrently \"npm:cli\" \"npm:open\"",
    "t:check": "tsc --noEmit -p tsconfig.json",
    "t:types": "yarn run t:check",
    "t:watch": "yarn run t:check --watch",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@lerepo/web-app": "workspace:^0.2.1",
    "clipanion": "^3.1.0",
    "execa": "^6.1.0",
    "lodash": "^4.17.21",
    "regenerator-runtime": "^0.13.9",
    "typanion": "^3.12.0"
  },
  "devDependencies": {
    "@babel/cli": "7.18.10",
    "@babel/core": "^7.19.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.19.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.18.9",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.0.3",
    "@types/lodash": "^4.14.185",
    "@types/node": "^18.7.18",
    "babel-loader": "^8.2.5",
    "babel-plugin-import": "^1.13.5",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-define": "^2.1.0",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^7.4.0",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "^3.25.2",
    "dotenv": "^16.0.2",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "jaguar": "^6.0.1",
    "jest": "^29.0.3",
    "nodemon": "^2.0.20",
    "open-cli": "^7.0.1",
    "pnp-webpack-plugin": "^1.7.0",
    "prettier": "^2.7.1",
    "prettier-plugin-package": "^1.3.0",
    "rimraf": "^3.0.2",
    "source-map-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.6",
    "typescript": "4.8.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.6.1",
    "webpack-cli": "^4.10.0"
  }
}
